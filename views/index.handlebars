          <h3 id="itemHolder">
              {{this.item}}
          </h3>
          <button type="submit" class= "btn btn-primary" data-itemid="{{this.id}}" class="reItem" name ="recycled" val = "1"><h4>Recycle</h4></button><button class="btn btn-danger" data-itemid="{{this.id}}" class="deItem"><h4>Delete</h4></button>
        </form> --}}
</div>

<div id="col-3">
    <h2 style="text-align: center;">Recycled Items: </h2>
    <ul style = "list-style: none;">
  {{#each recycle}}
    {{#if recycled}}
      {{> recycle/item-block recycled=false}}
    {{/if}}
  {{/each}}
</ul>
</div>


</div>