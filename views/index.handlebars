<div class="jumbotron jumbotron-fluid text-center">
  <h1>Recycle It!</h1>
</div>





<div id="grid">

<div id="col-1">
    
    <h3 id="label" style="text-align: center;">Input Item to be recycled</h3>
    <form id="inputItem" class="button-size">
  <textarea type="text" name="item" id="textarea"></textarea>
  <br>
  <button type="submit" class="saveItem"><h4>Save Item!</h4></button>
</form>
</div>

<div id="col-2">
    <h2 style="text-align: center;">Recycle: </h2>
    <br><br>
    <ul style = "list-style: none;">
    {{#each recycle}}
      {{#unless recycled}}
    <li class="recycle">
        <h3 id="itemHolder">
            {{this.item}}
        </h3>
        <button data-itemid="{{this.id}}" data-status="toRecycle"class="reItem" name ="recycled" val = "1"><h4>Recycle</h4></button><button data-itemid="{{this.id}}" class="deItem"><h4>Delete</h4></button>
    </li>
      {{/unless}}
    {{/each}}
    </ul>
    <br><br>
